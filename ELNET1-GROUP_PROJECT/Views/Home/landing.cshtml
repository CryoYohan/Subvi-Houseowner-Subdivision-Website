@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Subvi | Home";
}

<div class="flex items-center justify-between h-screen px-6">
    <!-- Left: Text Section -->
    <div class="flex flex-col">
        <h1 class="text-5xl mb-2" style="margin-left: 50px; font-size: 70px; font-family: Tahoma, sans-serif;">
            Welcome to
            <span style="font-weight: bold; display: inline; color: #1E3A8A;">Subvi</span>
            <p style="margin-top: 10px;">Smart Living in a</p>
            <p style="margin-top: 10px;">Thriving Community</p>
        </h1>

        <p id="changing-text" class="text-gray-600 max-w-2xl" style="font-size: 20px; margin-left: 50px; font-family: Tahoma, sans-serif;"></p>

        <button onclick="openSignupModal()" class="mt-6 px-8 py-3 bg-[#1E3A8A] text-white font-semibold rounded-lg shadow-md hover-animate" style="width: 250px; height: 50px; margin-top: 50px; margin-left: 50px;">
            Join Us Now!
        </button>
    </div>

    <!-- Right: Image Section -->
    <div class="flex justify-end">
        <img src="~/images/111.png" style="width: 1100px; height: 700px;">
    </div>

</div>

<!-- New Section Below Main -->
<section class="text-white py-20 px-10" data-aos="fade-up">
    <div class="container mx-auto text-center relative"
         style="width: 2200px; height: 750px; background: url('/images/222.png') no-repeat center center; background-size: cover; position: relative; border-radius: 30px;">

        <!-- Centering the images inside the background -->
        <div class="absolute top-0 left-0 flex justify-center items-center space-x-10"
             style="z-index: 2; width: 100%; margin-top: 300px;">
            <div class="w3-container" data-aos="zoom-in" data-aos-delay="200">
                <img src="~/images/333.png" style="width: 230px; height: auto; object-fit: contain;">
            </div>
            <div class="w3-container" data-aos="zoom-in" data-aos-delay="400">
                <img src="~/images/444.png" style="width: 230px; height: auto; object-fit: contain;">
            </div>
            <div class="w3-container" data-aos="zoom-in" data-aos-delay="600">
                <img src="~/images/555.png" style="width: 230px; height: auto; object-fit: contain;">
            </div>
        </div>

        <!-- Button Container with 777.png as its background -->
        <div class="absolute"
             style="top: 100%; left: 50%; transform: translate(-50%, -50%); width: 900px; height: 200px;
            background: url('/images/777.png') no-repeat center center; background-size: cover; display: flex; justify-content: center; align-items: center;"
             data-aos="fade-up" data-aos-delay="800">
            <div class="flex space-x-10">
                <button class="hover-animate" onclick="openSignupModal()"
                        style="padding: 10px 20px; font-size: 20px; background-color: #1E3A8A; font-family: Tahoma, sans-serif; color: white; border: none; border-radius: 20px; cursor: pointer; height: 70px; width: 180px;">
                    Inquire now!
                </button>
                <button class="hover-animate" onclick="openSignupModal()"
                        style="padding: 10px 20px; font-size: 20px; background-color: #1E3A8A; font-family: Tahoma, sans-serif; color: white; border: none; border-radius: 20px; cursor: pointer; width: 180px;">
                    Apply now
                </button>
            </div>
        </div>
    </div>
</section>

<div class="heading-container">
    <h2 style="margin-top: 150px;" data-aos="fade-up" data-aos-duration="1000">Why Choose Us?</h2>

    <div class="abs top-0 left-0 w-full flex justify-center items-center"
         style="z-index: 2; display: flex; gap: 250px; margin-top: 1750px; margin-left: 20px;">

        <!-- First Image -->
        <div class="w3-container" data-aos="fade-right" data-aos-duration="1000">
            <img src="~/images/602182.png" alt="Prime Location">
            <p style="margin-left: -40px;" data-aos="fade-up" data-aos-delay="200">Prime Location</p>
            <h3 class="text" style="margin-left: -50px;" data-aos="fade-up" data-aos-delay="400">
                Close to essential <br> establishments
            </h3>
        </div>

        <!-- Second Image -->
        <div class="w3-container" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
            <img src="~/images/3090423.png" alt="Community-Oriented" style="margin-left: 40px;">
            <p style="margin-left: -20px;" data-aos="fade-up" data-aos-delay="400">Community-Oriented</p>
            <h3 class="text" data-aos="fade-up" data-aos-delay="600">
                Regular events & <br> Homeowner engagement
            </h3>
        </div>

        <!-- Third Image -->
        <div class="w3-container" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="400">
            <img src="~/images/4501128.png" alt="Secure and Peaceful" style="margin-top: 70px;">
            <p style="margin-left: -10px;" data-aos="fade-up" data-aos-delay="600">Secure and Peaceful</p>
            <h3 class="text" data-aos="fade-up" data-aos-delay="800">
                A gated <br> subdivision with <br> modern security <br> features
            </h3>
        </div>
    </div>
</div>

<!-- Login Modal -->
<div id="login-modal" class="hidden fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
    <div class="modal-content p-6 rounded-lg shadow-lg w-96">
        <div class="text-right">
            <button type="button" onclick="closeLoginModal()" class="text-red-200 font-bold text-2xl">&times;</button>
        </div>
        <h2 class="text-xl font-bold text-center mb-4">Login</h2>
        <form id="login-form">
            <label class="block mb-2">Email</label>
            <input type="email" id="login-email" class="w-full p-2 border rounded mb-3" required>

            <label class="block mb-2">Passwords</label>
            <input type="password" id="login-password" class="w-full p-2 border rounded mb-3" required>

            <div class="flex justify-between">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Login</button>
            </div>
        </form>
    </div>
</div>

<!-- Sign Up Modal -->
<div id="signup-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center">
    <div class="modal-content p-8 rounded-lg shadow-lg w-1/3">
        <h2 class="text-2xl font-bold text-blue-800 mb-4">Sign Up</h2>
        <form id="signup-form">
            <div class="mb-4">
                <label class="block text-gray-700">First Name</label>
                <input type="text" id="firstname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Last Name</label>
                <input type="text" id="lastname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Email</label>
                <input type="email" id="email" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Address</label>
                <input type="text" id="address" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Phone Number</label>
                <input type="text" id="phonenumber" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Password</label>
                <input type="password" id="password" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="flex justify-end space-x-4">
                <button type="button" onclick="closeSignupModal()" class="bg-gray-500 text-white px-4 py-2 rounded-lg">Cancel</button>
                <button type="submit" class="bg-blue-800 text-white px-4 py-2 rounded-lg">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<!-- Loading screen -->
<div id="loading-screen" class="position-fixed w-100 h-100 d-flex justify-content-center align-items-center bg-white" style="z-index: 1050; display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
