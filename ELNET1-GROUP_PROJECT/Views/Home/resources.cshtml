    <script>
        // Documents Modal Functions
        function openDocumentsModal() {
            document.getElementById("documentsModalOverlay").classList.remove("hidden");
            document.body.style.overflow = 'hidden';
        }

        function closeDocumentsModal() {
            document.getElementById("documentsModalOverlay").classList.add("hidden");
            document.body.style.overflow = '';
        }

        function downloadDocument(type) {
            // PDF File Setup Instructions:
            // 1. Create a folder called "documents" in your website's root directory
            // 2. Add your PDF files with these exact names:
            //    - subvi_ccrs.pdf (for CC&Rs)
            //    - subvi_community_plans.pdf
            //    - subvi_bylaws.pdf
            //    - subvi_rules_regulations.pdf
            //    - subvi_articles_of_incorporation.pdf

            const fileMap = {
                'ccr': '/documents/subvi_ccrs.pdf',
                'community_plans': '/documents/subvi_community_plans.pdf',
                'bylaws': '/documents/subvi_bylaws.pdf',
                'rules_regulations': '/documents/subvi_rules_regulations.pdf',
                'articles': '/documents/subvi_articles_of_incorporation.pdf'
            };

            // Create a temporary link to trigger download
            const link = document.createElement('a');
            link.href = fileMap[type];
            link.download = fileMap[type].split('/').pop();
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // Close modal after download starts
            setTimeout(closeDocumentsModal, 500);
        }

        // Close modal when clicking outside content
        document.getElementById('documentsModalOverlay').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDocumentsModal();
            }
        });
        const modalData = {
            homeowner: {
                title: "Homeowner Guidelines",
                content: "Here you can find all the community rules, architectural policies, and move-in procedures to ensure smooth integration into our community."
            },
            events: {
                title: "Community Events",
                content: "Stay updated on upcoming community meetings, activities, and exciting announcements. Don't miss out on events that bring the neighborhood together!"
            },
            documents: {
                title: "Documents & Forms",
                content: "Access essential forms related to lot ownership, construction permits, and payment documentation."
            },
            payments: {
                title: "Payment & Dues",
                content: "Learn about HOA fees, due dates, and convenient payment options tailored to your needs."
            },
            maintenance: {
                title: "Maintenance Requests",
                content: "Report and track maintenance issues with ease. Our dedicated team is ready to keep the community in top shape."
            },
            emergency: {
                title: "Emergency Contacts",
                content: "Quick access to security, fire department, and medical services contacts for immediate assistance."
            }
        };

        function openModal(type) {
            document.getElementById("modalTitle").textContent = modalData[type].title;
            document.getElementById("modalContent").textContent = modalData[type].content;
            document.getElementById("modalOverlay").classList.remove("hidden");
        }

        function closeModal() {
            document.getElementById("modalOverlay").classList.add("hidden");
        }

        async function loadTodayAnnouncements() {
            const response = await fetch('/Home/GetTodayAnnouncements');
            const announcements = await response.json();
            const list = document.getElementById('todayAnnouncements');
            const todayDateElement = document.getElementById('todayDate');

            // Format today's date as "Mar 23"
            const today = new Date();
            const formattedToday = today.toLocaleString('en-US', { month: 'short', day: 'numeric' });
            todayDateElement.textContent = formattedToday;

            list.innerHTML = '';

            if (announcements.length === 0) {
                list.innerHTML = '<p class="text-gray-500 text-sm">No events today.</p>';
                return;
            }

            announcements.forEach(announcement => {
                // Extract time from the "YYYY-MM-DD HH:MM:SS" format
                const dateTime = new Date(announcement.datePosted);
                const time = dateTime.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });

                const li = document.createElement('li');
                li.className = 'flex items-start gap-3';
                li.innerHTML = `
                    <div>
                        <p class="font-medium text-blue-800">${announcement.title}</p>
                        <p class="text-sm text-gray-500">${time}</p>
                    </div>
                `;
                list.appendChild(li);
            });
        }

    function loadCommunityStats() {
        fetch('/Home/GetCommunityStats')
            .then(response => response.json())
            .then(data => {
                document.getElementById('memberCount').textContent = data.memberCount;
                document.getElementById('resolvedIssuesCount').textContent = data.resolvedIssuesCount;
            })
            .catch(error => console.error('Error fetching community stats:', error));
    }


    document.addEventListener('DOMContentLoaded', () => {
        loadTodayAnnouncements();
        loadCommunityStats();
    });
    </script>
