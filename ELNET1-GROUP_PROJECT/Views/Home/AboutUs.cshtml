@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Subvi | About Us";
}

<!-- Hero Section -->
<section class="relative w-full h-screen flex items-center justify-center text-white"
         style="background: url('/images/about-hero.jpg') no-repeat center center; background-size: cover;">
    <div class="bg-black bg-opacity-50 p-10 rounded-lg text-center w-2/3">
        <h1 class="text-4xl font-bold mb-4" data-aos="fade-up">Who We Are</h1>
        <p class="text-lg leading-relaxed" data-aos="fade-up" data-aos-delay="200">
            Welcome to <strong>Subvi</strong>, where we redefine excellence and innovation.
            Our mission is to create exceptional experiences, blending creativity and expertise
            to deliver world-class solutions for our clients.
        </p>
    </div>
</section>

<!-- Mission, Vision, and Core Values -->
<section class="py-20 px-10 text-center bg-gray-100">
    <h2 class="text-3xl font-bold mb-10 text-blue-800" data-aos="fade-up">Our Foundation</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Mission -->
        <div class="bg-white shadow-lg p-6 rounded-lg" data-aos="flip-left">
            <img src="/images/mission.png" class="w-20 mx-auto mb-4">
            <h3 class="text-xl font-semibold">Our Mission</h3>
            <p class="text-gray-600 mt-2">
                To empower individuals and businesses with top-tier services that drive success and growth.
            </p>
        </div>
        <!-- Vision -->
        <div class="bg-white shadow-lg p-6 rounded-lg" data-aos="flip-up" data-aos-delay="200">
            <img src="/images/vision.png" class="w-20 mx-auto mb-4">
            <h3 class="text-xl font-semibold">Our Vision</h3>
            <p class="text-gray-600 mt-2">
                To be the leading force in innovation, setting benchmarks in quality and excellence.
            </p>
        </div>
        <!-- Core Values -->
        <div class="bg-white shadow-lg p-6 rounded-lg" data-aos="flip-right" data-aos-delay="400">
            <img src="/images/values.png" class="w-20 mx-auto mb-4">
            <h3 class="text-xl font-semibold">Core Values</h3>
            <p class="text-gray-600 mt-2">
                Integrity, Passion, Innovation, and Excellence drive everything we do.
            </p>
        </div>
    </div>
</section>

<!-- Our Team -->
<section class="py-20 px-10 bg-white text-center">
    <h2 class="text-3xl font-bold text-blue-800 mb-10" data-aos="fade-up">Meet Our Team</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Team Member 1 -->
        <div class="bg-gray-100 p-6 rounded-lg shadow-lg" data-aos="zoom-in">
            <img src="/images/team1.jpg" class="w-32 h-32 rounded-full mx-auto mb-4">
            <h3 class="text-xl font-semibold">Jane Doe</h3>
            <p class="text-gray-600">CEO & Founder</p>
        </div>
        <!-- Team Member 2 -->
        <div class="bg-gray-100 p-6 rounded-lg shadow-lg" data-aos="zoom-in" data-aos-delay="200">
            <img src="/images/team2.jpg" class="w-32 h-32 rounded-full mx-auto mb-4">
            <h3 class="text-xl font-semibold">John Smith</h3>
            <p class="text-gray-600">CTO</p>
        </div>
        <!-- Team Member 3 -->
        <div class="bg-gray-100 p-6 rounded-lg shadow-lg" data-aos="zoom-in" data-aos-delay="400">
            <img src="/images/team3.jpg" class="w-32 h-32 rounded-full mx-auto mb-4">
            <h3 class="text-xl font-semibold">Sarah Johnson</h3>
            <p class="text-gray-600">Marketing Head</p>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-20 px-10 text-center bg-blue-800 text-white">
    <h2 class="text-3xl font-bold mb-6" data-aos="fade-up">Join Us on Our Journey</h2>
    <p class="text-lg leading-relaxed mb-6" data-aos="fade-up" data-aos-delay="200">
        Be a part of something bigger! Connect with us and explore endless opportunities.
    </p>
    <a href="/contact-us" class="bg-white text-blue-800 px-6 py-3 rounded-lg font-semibold" data-aos="fade-up" data-aos-delay="400">
        Get in Touch
    </a>
</section>

<!-- Login Modal -->
<div id="login-modal" class="hidden fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
    <div class="modal-content p-6 rounded-lg shadow-lg w-96">
        <div class="justify-right">
            <button type="button" onclick="closeLoginModal()" class="bg-gray-400 text-white px-4 py-2 rounded">&times;</button>
        </div>
        <h2 class="text-xl font-bold text-center mb-4">Login</h2>
        <form id="login-form">
            <label class="block mb-2">Email</label>
            <input type="email" id="login-email" class="w-full p-2 border rounded mb-3" required>

            <label class="block mb-2">Passwords</label>
            <input type="password" id="login-password" class="w-full p-2 border rounded mb-3" required>

            <div class="flex justify-between">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Login</button>
            </div>
        </form>

        <div class="w-full border-t border-gray-300 mt-4"></div>

        <!-- Google Sign-In Section -->
        <div class="flex flex-col items-center space-y-4 mt-4">
            <p class="text-gray-500">Or log in with Google</p>

            <div id="g_id_onload"
                 data-client_id="556953627417-j7ck52oo8s1ciavni7i5hrn5rbko7jhu.apps.googleusercontent.com"
                 data-callback="handleGoogleSignIn"
                 data-auto_prompt="false">
            </div>
            <div class="g_id_signin" data-type="standard"></div>
        </div>
    </div>
</div>

<!-- Sign Up Modal -->
<div id="signup-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center">
    <div class="modal-content p-8 rounded-lg shadow-lg w-1/3">
        <h2 class="text-2xl font-bold text-blue-800 mb-4">Sign Up</h2>

        <!-- Google Sign-Up Button -->
        <div class="flex flex-col items-center space-y-4">
            <div id="g_id_onload"
                 data-client_id="556953627417-j7ck52oo8s1ciavni7i5hrn5rbko7jhu.apps.googleusercontent.com"
                 data-callback="handleGoogleSignIn"
                 data-auto_prompt="false">
            </div>
            <div class="g_id_signin" data-type="standard"></div>

            <p class="text-gray-500">OR</p>

            <!-- Divider -->
            <div class="w-full border-t border-gray-300 mt-4"></div>
        </div>

        <form id="signup-form">
            <div class="mb-4">
                <label class="block text-gray-700">First Name</label>
                <input type="text" id="firstname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Last Name</label>
                <input type="text" id="lastname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Email</label>
                <input type="email" id="email" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Address</label>
                <input type="text" id="address" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Phone Number</label>
                <input type="text" id="phonenumber" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Password</label>
                <input type="password" id="password" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="flex justify-end space-x-4">
                <button type="button" onclick="closeSignupModal()" class="bg-gray-500 text-white px-4 py-2 rounded-lg">Cancel</button>
                <button type="submit" class="bg-blue-800 text-white px-4 py-2 rounded-lg">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<!-- Loading screen -->
<div id="loading-screen" class="position-fixed w-100 h-100 d-flex justify-content-center align-items-center bg-white" style="z-index: 1050; display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
