@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Subvi | About Us";
}

<!-- Hero Section -->
<section class="relative w-full h-screen flex items-center justify-center text-white"
         style="background: url('/images/about-hero.jpg') no-repeat center center; background-size: cover;">
    <div class="bg-blue-700 bg-opacity-50 p-10 rounded-lg text-center w-2/3">
        <h1 class="text-4xl font-bold mb-4" data-aos="fade-up">Who We Are</h1>
        <p class="text-lg leading-relaxed" data-aos="fade-up" data-aos-delay="200">
            Welcome to <strong>Subvi</strong>, a thriving residential community designed for modern living.
            We are dedicated to providing safe, comfortable, and well-managed neighborhoods where families can flourish.
            Our commitment to quality, security, and sustainability ensures a peaceful and fulfilling living experience.
        </p>
    </div>
</section>

