<!-- Login Modal -->
<div id="login-modal" class="hidden fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50 z-50">
    <div class="rounded-xl shadow-xl p-8 w-96 relative font-sans" style="background-color: white;">
        <!-- Close Button -->
        <button type="button" onclick="closeLoginModal()" class="absolute top-4 right-4 text-red-600 hover:text-red-900 text-2xl font-bold">
            &times;
        </button>

        <!-- Logo -->
        <h1 class="text-3xl font-extrabold text-blue-900 mb-2 select-none">Subvi<span class="text-blue-400">. </span></h1>

        <!-- Login Title -->
        <div class="text-center">
            <h2 class="text-xl font-semibold mb-1">Login Now</h2>
            <p class="text-gray-500 text-sm mb-6">Introduce your information to sign in.</p>
        </div>

        <!-- Login Form -->
        <form id="login-form">
            <label class="block mb-2">Email</label>
            <input type="email" id="login-email" class="w-full p-2 border rounded mb-3" placeholder="Enter Email" required>

            <label class="block text-sm mb-1" for="login-password">Password</label>
            <div class="relative mb-2">
                <input type="password" id="login-password" class="w-full p-2 border rounded placeholder-gray-400 text-sm" placeholder="Password" required>
                <span id="toggle-password" class="absolute right-3 top-2.5 cursor-pointer text-gray-500 hover:text-gray-700 text-lg">
                    <i class="fa-solid fa-eye" id="toggle-icon"></i>
                </span>
            </div>

            <div class="text-right text-sm mb-6">
                <a href="#" class="text-gray-500 hover:text-blue-600">Forgot Password?</a>
            </div>

            <p id="login-message-error" class="hidden text-center font-semibold text-sm text-red-600 mb-4"></p>
            <p id="login-message-success" class="hidden text-center font-semibold text-sm text-green-600 mb-4"></p>

            <button type="submit" class="w-full bg-blue-800 hover:bg-blue-900 text-white py-2 rounded font-medium flex justify-center items-center gap-2 transition">
                Continue <span>&rarr;</span>
            </button>
        </form>
    </div>
</div>

<!-- Sign Up Modal -->
<div id="signup-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center">
    <div class="modal-content p-8 rounded-lg shadow-lg w-1/3">
        <h2 class="text-2xl font-bold text-blue-800 mb-4">Sign Up</h2>
        <form id="signup-form">
            <div class="mb-4">
                <label class="block text-gray-700">First Name</label>
                <input type="text" id="firstname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Last Name</label>
                <input type="text" id="lastname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Email</label>
                <input type="email" id="email" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Address</label>
                <input type="text" id="address" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Phone Number</label>
                <input type="text" id="phonenumber" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Password</label>
                <input type="password" id="password" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="flex justify-end space-x-4">
                <button type="button" onclick="closeSignupModal()" class="bg-gray-500 text-white px-4 py-2 rounded-lg">Cancel</button>
                <button type="submit" class="bg-blue-800 text-white px-4 py-2 rounded-lg">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<!-- Loading screen -->
<div id="loading-screen" class="position-fixed w-100 h-100 d-flex justify-content-center align-items-center bg-white" style="z-index: 1050; display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
