@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Subvi | Contacts";
}

<section class="relative w-full h-96 flex items-center justify-center text-blue-600"
         style="background: url('/images/contact-hero.jpg') no-repeat center center; background-size: cover;">
    <div class="bg-gray-100 p-10 rounded-lg text-center w-2/3">
        <h1 class="text-4xl font-bold mb-4" style="#1E40AF" data-aos="fade-up">Get in Touch</h1>
        <p class="text-lg leading-relaxed" data-aos="fade-up" data-aos-delay="200">
            Have questions or need assistance?
        </p>
        <p class="text-lg leading-relaxed" data-aos="fade-up" data-aos-delay="250">
            Reach out to us anytime. We're here to help and assist you!
        </p>
        <div class="flex mt-4 justify-center font-semibold gap-4 animate-fade-in-up delay-300">
            <a href="#contact-section" class="btn-secondary hover:underline" data-aos="fade-right" data-aos-delay="400">
                Contact Details
            </a>
            <a data-aos="fade-down" data-aos-delay="350">|</a>
            <a href="#message-section" class="btn-primary hover:underline" data-aos="zoom-in" data-aos-delay="400">
                Send Message
            </a>
            <a data-aos="fade-down" data-aos-delay="350">|</a>
            <a href="#map-section" class="btn-secondary hover:underline text-semibold" data-aos="fade-left" data-aos-delay="400">
               Our Location
            </a>
        </div>
    </div>
    
</section>

<!-- Contact Information -->
<section class="py-20 px-10 text-center bg-gray-100" id="contact-section">
    <h2 class="text-3xl font-bold mb-10 text-blue-600" data-aos="fade-up">Contact Details</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Phone -->
        <div class="bg-white shadow-lg p-6 rounded-lg flex flex-col items-center" data-aos="fade-right">
            <img src="/images/icon-images/phone-icon.png" class="w-16 mb-4">
            <h3 class="text-xl font-semibold">Phone</h3>
            <p class="text-gray-600 mt-2">+639 (123) 456-7890</p>
        </div>
        <!-- Email -->
        <div class="bg-white shadow-lg p-6 rounded-lg flex flex-col items-center" data-aos="fade-up" data-aos-delay="200">
            <img src="/images/icon-images/email-icon.png" class="w-16 mb-4">
            <h3 class="text-xl font-semibold">Email</h3>
            <a href="mailto:support@subvi.com" class="text-gray-600 mt-2 hover:underline">support@subvi.com</a>
        </div>
        <!-- Address -->
        <div class="bg-white shadow-lg p-6 rounded-lg flex flex-col items-center" data-aos="fade-left" data-aos-delay="400">
            <img src="/images/icon-images/location-icon.png" class="w-16 mb-4">
            <h3 class="text-xl font-semibold">Address</h3>
            <a href="https://www.google.com/maps/search/?api=1&query=123+Subvi+Street,+City,+Country"
                target="_blank" class="text-gray-600 mt-2 hover:underline">123 Subvi Street, City, Country</a>
        </div>
    </div>
</section>

<!-- Message Form -->
<section class="py-10 px-10 bg-white text-center" id="message-section">
    <h2 class="text-3xl font-bold text-blue-600 mb-10" data-aos="fade-up">Send Us a Message</h2>

    <div class="max-w-2xl mx-auto bg-gray-100 p-8 rounded-lg shadow-lg" data-aos="zoom-in">
        <form id="contact-form">
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold">Full Name</label>
                <input type="text" id="name" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold">Email</label>
                <input type="email" id="email" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold">Message</label>
                <textarea id="message" class="w-full border rounded-lg px-3 py-2" rows="4" required></textarea>
            </div>
            <button type="submit" class="bg-blue-800 text-white px-6 py-3 rounded-lg font-semibold">
                Send Message
            </button>
        </form>
    </div>
</section>

<!-- Google Maps Embed -->
<section class="py-10 px-10 text-center bg-gray-100" id="map-section">
    <h2 class="text-3xl font-bold text-blue-600 mb-6" data-aos="fade-up">Find Us Here</h2>

    <!-- Map Container -->
    <div class="w-full flex justify-center" data-aos="fade-up" data-aos-delay="200">
        <div id="map" style="width: 100%; height: 400px;"></div>
    </div>
</section>


<!-- Login Modal -->
<div id="login-modal" class="hidden fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
    <div class="modal-content p-6 rounded-lg shadow-lg w-96">
        <div class="text-right">
            <button type="button" onclick="closeLoginModal()" class="text-red-800 font-bold text-2xl">&times;</button>
        </div>
        <h2 class="text-xl font-bold text-center mb-4">Login</h2>
        <form id="login-form">
            <label class="block mb-2">Email</label>
            <input type="email" id="login-email" class="w-full p-2 border rounded mb-3" required>

            <label class="block mb-2">Passwords</label>
            <input type="password" id="login-password" class="w-full p-2 border rounded mb-3" required>

            <div class="flex justify-between">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Login</button>
            </div>
        </form>
    </div>
</div>

<!-- Sign Up Modal -->
<div id="signup-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center">
    <div class="modal-content p-8 rounded-lg shadow-lg w-1/3">
        <h2 class="text-2xl font-bold text-blue-800 mb-4">Sign Up</h2>
        <form id="signup-form">
            <div class="mb-4">
                <label class="block text-gray-700">First Name</label>
                <input type="text" id="firstname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Last Name</label>
                <input type="text" id="lastname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Email</label>
                <input type="email" id="email" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Address</label>
                <input type="text" id="address" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Phone Number</label>
                <input type="text" id="phonenumber" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Password</label>
                <input type="password" id="password" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="flex justify-end space-x-4">
                <button type="button" onclick="closeSignupModal()" class="bg-gray-500 text-white px-4 py-2 rounded-lg">Cancel</button>
                <button type="submit" class="bg-blue-800 text-white px-4 py-2 rounded-lg">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<!-- Loading screen -->
<div id="loading-screen" class="position-fixed w-100 h-100 d-flex justify-content-center align-items-center bg-white" style="z-index: 1050; display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>