@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Subvi | Contacts";
}
<!-- Hero Section -->
<section class="relative w-full h-[450px] flex items-center justify-center text-white"
         style="background: url('/images/contact-hero.jpg') no-repeat center center; background-size: cover;">
    <div class="bg-black bg-opacity-60 p-12 rounded-lg text-center w-4/5 max-w-3xl shadow-lg">
        <h1 class="text-5xl font-extrabold mb-4 animate-fade-up">Get in Touch</h1>
        <p class="text-lg leading-relaxed animate-fade-up delay-200">
            Have questions or need assistance? We’re happy to help. Reach out anytime!
        </p>
    </div>
</section>

<!-- Contact Details -->
<div class="py-20 px-10 text-center bg-gray-100">
    <h2 class="text-4xl font-bold mb-10 text-blue-800 animate-fade-up">Contact Details</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Phone -->
        <div class="bg-white shadow-xl p-8 rounded-lg flex flex-col items-center transition-all hover:scale-105 hover:shadow-2xl animate-fade-right">
            <img src="/images/phone-icon.png" class="w-14 mb-4">
            <h3 class="text-2xl font-semibold">Phone</h3>
            <p class="text-gray-600 mt-2 text-lg">+1 (123) 456-7890</p>
        </div>
        <!-- Email -->
        <div class="bg-white shadow-xl p-8 rounded-lg flex flex-col items-center transition-all hover:scale-105 hover:shadow-2xl animate-fade-up delay-200">
            <img src="/images/email-icon.png" class="w-14 mb-4">
            <h3 class="text-2xl font-semibold">Email</h3>
            <p class="text-gray-600 mt-2 text-lg">support@subvi.com</p>
        </div>
        <!-- Address -->
        <div class="bg-white shadow-xl p-8 rounded-lg flex flex-col items-center transition-all hover:scale-105 hover:shadow-2xl animate-fade-left delay-400">
            <img src="/images/location-icon.png" class="w-14 mb-4">
            <h3 class="text-2xl font-semibold">Address</h3>
            <p class="text-gray-600 mt-2 text-lg">123 Subvi Street, City, Country</p>
        </div>
    </div>
</div>

<!-- Contact Form -->
<div class="py-20 px-10 bg-white text-center">
    <h2 class="text-4xl font-bold text-blue-800 mb-10 animate-fade-up">Send Us a Message</h2>

    <div class="max-w-2xl mx-auto bg-gray-100 p-10 rounded-lg shadow-xl animate-zoom-in">
        <form id="contact-form">
            <div class="mb-5">
                <label class="block text-gray-700 font-semibold text-lg">Full Name</label>
                <input type="text" id="name" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-800 transition" required>
            </div>
            <div class="mb-5">
                <label class="block text-gray-700 font-semibold text-lg">Email</label>
                <input type="email" id="email" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-800 transition" required>
            </div>
            <div class="mb-5">
                <label class="block text-gray-700 font-semibold text-lg">Message</label>
                <textarea id="message" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-800 transition" rows="4" required></textarea>
            </div>
            <button type="submit" class="bg-blue-800 text-white px-6 py-3 rounded-lg font-semibold text-lg transition hover:bg-blue-900">
                Send Message
            </button>
        </form>
    </div>
</div>

<!-- Google Maps -->
<section class="py-20 px-10 text-center bg-gray-100">
    <h2 class="text-4xl font-bold text-blue-800 mb-6 animate-fade-up">Find Us Here</h2>

    <div class="w-full flex justify-center animate-fade-up delay-200">
        <div id="map" style="width: 100%; height: 400px;"></div>
    </div>
</section>


<!-- Login Modal -->
<div id="login-modal" class="hidden fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
    <div class="modal-content p-6 rounded-lg shadow-lg w-96">
        <div class="justify-right">
            <button type="button" onclick="closeLoginModal()" class="bg-gray-400 text-white px-4 py-2 rounded">&times;</button>
        </div>
        <h2 class="text-xl font-bold text-center mb-4">Login</h2>
        <form id="login-form">
            <label class="block mb-2">Email</label>
            <input type="email" id="login-email" class="w-full p-2 border rounded mb-3" required>

            <label class="block mb-2">Passwords</label>
            <input type="password" id="login-password" class="w-full p-2 border rounded mb-3" required>

            <div class="flex justify-between">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Login</button>
            </div>
        </form>

        <div class="w-full border-t border-gray-300 mt-4"></div>

        <!-- Google Sign-In Section -->
        <div class="flex flex-col items-center space-y-4 mt-4">
            <p class="text-gray-500">Or log in with Google</p>

            <div id="g_id_onload"
                 data-client_id="556953627417-j7ck52oo8s1ciavni7i5hrn5rbko7jhu.apps.googleusercontent.com"
                 data-callback="handleGoogleSignIn"
                 data-auto_prompt="false">
            </div>
            <div class="g_id_signin" data-type="standard"></div>
        </div>
    </div>
</div>

<!-- Sign Up Modal -->
<div id="signup-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center">
    <div class="modal-content p-8 rounded-lg shadow-lg w-1/3">
        <h2 class="text-2xl font-bold text-blue-800 mb-4">Sign Up</h2>

        <!-- Google Sign-Up Button -->
        <div class="flex flex-col items-center space-y-4">
            <div id="g_id_onload"
                 data-client_id="556953627417-j7ck52oo8s1ciavni7i5hrn5rbko7jhu.apps.googleusercontent.com"
                 data-callback="handleGoogleSignIn"
                 data-auto_prompt="false">
            </div>
            <div class="g_id_signin" data-type="standard"></div>

            <p class="text-gray-500">OR</p>

            <!-- Divider -->
            <div class="w-full border-t border-gray-300 mt-4"></div>
        </div>

        <form id="signup-form">
            <div class="mb-4">
                <label class="block text-gray-700">First Name</label>
                <input type="text" id="firstname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Last Name</label>
                <input type="text" id="lastname" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Email</label>
                <input type="email" id="email" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Address</label>
                <input type="text" id="address" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Phone Number</label>
                <input type="text" id="phonenumber" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Password</label>
                <input type="password" id="password" class="w-full border rounded-lg px-3 py-2" required>
            </div>
            <div class="flex justify-end space-x-4">
                <button type="button" onclick="closeSignupModal()" class="bg-gray-500 text-white px-4 py-2 rounded-lg">Cancel</button>
                <button type="submit" class="bg-blue-800 text-white px-4 py-2 rounded-lg">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<!-- Loading screen -->
<div id="loading-screen" class="position-fixed w-100 h-100 d-flex justify-content-center align-items-center bg-white" style="z-index: 1050; display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>