                    <div class="bg-light mb-2" style="width: 90%; height: 15px;"></div>
                    <div class="bg-light mb-2" style="width: 60%; height: 15px;"></div>
                </div>
            </div>
        </div>

        <!-- Forum Posts -->
        <div id="forum-posts" style="display: none;">
            @foreach (var post in Model)
            {
                <div class="card mb-3 post-item">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <div class="user-avatar p-4">
                                @post.Firstname[0]@post.Lastname[0]
                            </div>
                            <div class="w-100 pd-4">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="text-muted">Posted by @post.FullName on @post.DatePosted.ToString("MMMM dd, yyyy")</p>
                                <p class="card-text">@post.Content</p>
                                <div class="d-flex justify-content-end gap-3">
                                    <!-- Like Button -->
                                    <button onclick="toggleLike(@post.PostId)" class="btn btn-outline-gray btn-sm d-flex align-items-center gap-1">
                                        <i id="like-icon-@post.PostId" class="bi @(post.IsLiked ? "bi-hand-thumbs-up-fill text-primary" : "bi-hand-thumbs-up text-secondary")"></i>
                                        <span id="like-count-@post.PostId">@post.LikeDisplay</span>
                                    </button>

                                    <!-- Comment Button -->
                                    <a href="@Url.Action("Comments", "Home", new { id = post.PostId, title = GetTruncatedTitle(post.Title) })" class="btn btn-outline-gray btn-sm d-flex align-items-center gap-1">
                                        <i class="bi bi-chat"></i>
