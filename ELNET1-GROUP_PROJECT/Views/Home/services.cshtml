@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Subvi | Services";

    // Retrieve the user's role from cookies
    string role = Context.Request.Cookies["UserRole"];

    // Declare controller
    string homeController = "";
    string calendarController = "";
    string facilitiesController = "";
    string billController = "";
    string servicesController = "";
    string forumsController = "";
    string feedbacksController = "";
    string resourcesController = "";

    // Default action values
    string homeAction = "";
    string calendarAction = "";
    string facilitiesAction = "";
    string billAction = "";
    string servicesAction = "";
    string forumsAction = "";
    string feedbacksAction = "";
    string resourcesAction = "";

     if (role == "Homeowner")
    {
        homeController = "home"; homeAction = "dashboard";
        calendarController = "home"; calendarAction = "calendar";
        facilitiesController = "home"; facilitiesAction = "facilities";
        billController = "home"; billAction = "bill";
        servicesController = "home"; servicesAction = "services";
        forumsController = "home"; forumsAction = "forums";
        feedbacksController = "home"; feedbacksAction = "feedbacks";
        resourcesController = "home"; resourcesAction = "resources";
    }

}
@section Scripts {
    <script src="~/js/services.js"></script>
}

<div class="flex flex-row overflow-hidden pt-4 flex-shrink-0 min-h-screen">
    @* Sidebar *@
    <div class="bg-white rounded-tr-2xl rounded-br-2xl shadow-md w-56 py-6 ">
        <ul class="space-y-4">
            <!-- Home (Dynamic) -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out"
                   asp-controller="@homeController" asp-action="@homeAction">
                    <i class="fas fa-home text-xl"></i>
                    <span class="font-semibold">Home</span>
                </a>
            </li>

            <!-- Calendar -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out"
                   asp-controller="@calendarController" asp-action="@calendarAction">
                    <i class="fas fa-calendar-alt text-xl"></i>
                    <span class="font-semibold">Calendar</span>
                </a>
            </li>

            <!-- Facilities -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out"
                   asp-controller="@facilitiesController" asp-action="@facilitiesAction">
                    <i class="fas fa-building text-xl"></i>
                    <span class="font-semibold">Facilities</span>
                </a>
            </li>

            <!-- Bill Payment -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out"
                   asp-controller="@billController" asp-action="@billAction">
                    <i class="fas fa-file-invoice-dollar text-xl"></i>
                    <span class="font-semibold">Bill Payment</span>
                </a>
            </li>

            <!-- Services -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item active-item"
                   asp-controller="@servicesController" asp-action="@servicesAction">
                    <i class="fas fa-tools text-xl"></i>
                    <span class="font-semibold">Services</span>
                </a>
            </li>

            <!-- Forums -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out"
                   asp-controller="@forumsController" asp-action="@forumsAction">
                    <i class="fas fa-comments text-xl"></i>
                    <span class="font-semibold">Forums Discussion</span>
                </a>
            </li>

            <!-- Feedbacks -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out"
                   asp-controller="@feedbacksController" asp-action="@feedbacksAction">
                    <i class="fas fa-bullhorn text-xl"></i>
                    <span class="font-semibold">Feedbacks</span>
                </a>
            </li>

            <!-- Resources -->
            <li>
                <a class="flex items-center space-x-4 p-3 rounded-l-full sidebar-item hover:bg-gray-100 transition ease-in-out" asp-controller="@resourcesController" asp-action="@resourcesAction">
                    <i class="fas fa-folder text-xl"></i>
                    <span class="font-semibold">Resources</span>
                </a>
            </li>
        </ul>
    </div>

    @* Main Content *@
    <div id="main-container" class="col-span-12 w-full justify-center">
        <div id="header" class="flex items-center mx-auto space-x-2 mb-4 w-[95%] bg-white text-[#1E3A8A] p-4 rounded-xl shadow-md">
            <i class="fas fa-tools text-xl"></i>
            <h1 class="text-2xl font-bold">Our Services</h1>
        </div>
        
        <!-- Main content grid with 70-30 split -->
        <div class="grid grid-cols-12 gap-4 mx-4">
            <!-- Left side - Services List -->
            <div class="col-span-8 bg-white p-4 rounded-xl shadow-md">
                <h2 class="text-xl items-center font-bold mb-4 text-[#1E3A8A]">List of Services</h2>
                
                <!-- Services Grid -->
                <div class="grid grid-cols-2 gap-6 mb-6">
                    <!-- Clean-up Service Card -->
                    <div class="bg-white p-4 rounded-xl shadow-md">
                        <img src="~/images/admin-resources/services/cleanup.png" alt="Clean-up Service" class="w-full h-48 object-cover rounded-lg mb-4">
                        <h3 class="text-lg font-semibold text-[#1E3A8A] mb-2">Clean-up Service</h3>
                        <p class="text-gray-600 mb-4">Ensuring a tidy and well-maintained community through regular street sweeping, garbage collection, and landscaping upkeep.</p>
                        <div class="flex space-x-3">
                            <button onclick="showServiceModal('/images/admin-resources/services/cleanup.png', 'Clean-up Service', 'Ensuring a tidy and well-maintained community through regular street sweeping, garbage collection, and landscaping upkeep.')"
                                    class="px-6 py-2 bg-white text-[#1E3A8A] border border-[#1E3A8A] rounded-lg hover:bg-gray-50">
                                View
                            </button>
                            <button onclick="confirmRequest('Clean-up Service')"
                                    class="px-6 py-2 bg-[#60A5FA] text-white rounded-lg hover:bg-blue-400">
                                Request
                            </button>
                        </div>
                    </div>

                    <!-- Maintenance Services Card -->
                    <div class="bg-white p-4 rounded-xl shadow-md">
                        <img src="~/images/admin-resources/services/maintenance.png" alt="Maintenance Services" class="w-full h-48 object-cover rounded-lg mb-4">
                        <h3 class="text-lg font-semibold text-[#1E3A8A] mb-2">Maintenance Services</h3>
                        <p class="text-gray-600 mb-4">Maintaining and repairing essential infrastructure, including lighting, plumbing, and communal amenities, to keep the subdivision in top condition.</p>
                        <div class="flex space-x-3">
                            <button onclick="showServiceModal('/images/admin-resources/services/maintenance.png', 'Maintenance Services', 'Maintaining and repairing essential infrastructure, including lighting, plumbing, and communal amenities, to keep the subdivision in top condition.')"
                                    class="px-6 py-2 bg-white text-[#1E3A8A] border border-[#1E3A8A] rounded-lg hover:bg-gray-50">
                                View
                            </button>
                            <button onclick="confirmRequest('Maintenance Services')"
                                    class="px-6 py-2 bg-[#60A5FA] text-white rounded-lg hover:bg-blue-400">
                                Request
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Security Services Card (Single Card Row) -->
                <div class="max-w-[48%]">
                    <div class="bg-white p-4 rounded-xl shadow-md">
                        <img src="~/images/admin-resources/services/security.png" alt="Security Services" class="w-full h-48 object-cover rounded-lg mb-4">
                        <h3 class="text-lg font-semibold text-[#1E3A8A] mb-2">Security Services</h3>
                        <p class="text-gray-600 mb-4">Ensuring a safe and well-maintained community through regular access monitoring, garbage collection and landscaping upkeep.</p>
                        <div class="flex space-x-3">
                            <button onclick="showServiceModal('/images/admin-resources/services/security.png', 'Security Services', 'Ensuring a safe and well-maintained community through regular access monitoring, garbage collection and landscaping upkeep.')"
                                    class="px-6 py-2 bg-white text-[#1E3A8A] border border-[#1E3A8A] rounded-lg hover:bg-gray-50">
                                View
                            </button>
                            <button onclick="confirmRequest('Security Services')"
                                    class="px-6 py-2 bg-[#60A5FA] text-white rounded-lg hover:bg-blue-400">
                                Request
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right side - Service Status -->
            <div class="col-span-4 space-y-4">
                <!-- Requested Services -->
                <div class="bg-white p-4 rounded-xl shadow-md">
                    <h2 class="text-xl font-bold mb-4 text-[#1E3A8A]">Requested Services</h2>

                    <!-- Loading animation -->
                    <div id="loadingSpinner" class="text-center hidden">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <!-- No data message -->
                    <div id="noDataMessage" class="text-center hidden text-gray-500">
                        No service requests available.
                    </div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full" id="serviceRequestTable">
                            <thead>
                                <tr class="text-sm text-gray-500">
                                    <th class="text-left py-2">Services</th>
                                    <th class="text-left py-2">Date Requested</th>
                                    <th class="text-left py-2">Status</th>
                                    <th class="text-left py-2">Staff Assigned</th>
                                </tr>
                            </thead>
                            <tbody class="text-sm" id="serviceRequestBody">
                                <!-- Dynamic rows will be populated here -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Services History -->
                <div class="bg-white p-4 rounded-xl shadow-md">
                    <h2 class="text-xl font-bold mb-4 text-[#1E3A8A]">Services History</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead>
                                <tr class="text-sm text-gray-500">
                                    <th class="text-left py-2">Services</th>
                                    <th class="text-left py-2">Date Completed</th>
                                    <th class="text-left py-2">Status</th>
                                    <th class="text-left py-2">Staff Assigned</th>
                                </tr>
                            </thead>
                            <tbody class="text-sm">
                                <tr>
                                    <td class="py-2">Facilities</td>
                                    <td class="py-2">11-12-24</td>
                                    <td class="py-2"><span class="px-2 py-1 bg-gray-100 text-gray-600 rounded-full">Completed</span></td>
                                    <td class="py-2 text-blue-500">John Doe</td>
                                </tr>
                                <tr>
                                    <td class="py-2">Security</td>
                                    <td class="py-2">11-12-24</td>
                                    <td class="py-2"><span class="px-2 py-1 bg-gray-100 text-gray-600 rounded-full">Completed</span></td>
                                    <td class="py-2 text-blue-500">Jane Smith</td>
                                </tr>
                                <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Structure -->
    <div id="serviceModal" class="hidden fixed inset-0 z-[9999] overflow-y-auto">
        <div class="fixed inset-0 bg-black/50 transition-opacity duration-300 opacity-0" id="modalOverlay"></div>
        <div class="flex items-center justify-center min-h-screen">
            <div class="modal-content transform transition-all duration-300 scale-95 opacity-0 bg-white rounded-xl shadow-xl mx-4 max-w-md w-full">
                <img id="modalImage" alt="Service Image" class="w-full h-64 object-cover rounded-t-xl">
                <div class="p-6">
                    <button class="w-full bg-[#60A5FA] hover:bg-blue-400 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200">
                        REQUEST SERVICE
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

