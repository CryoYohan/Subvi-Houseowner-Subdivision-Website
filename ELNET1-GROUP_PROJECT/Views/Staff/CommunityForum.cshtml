@model List<ForumPost>

@{
    Layout = "_StaffLayout";
    ViewData["Title"] = "Staff | Community Forum";
}

@functions {
    public string GetTruncatedTitle(string title)
    {
        var words = title.Split(' ');
        if (words.Length >= 5)
        {
            return string.Join("-", words.Take(5)) + "...";
        }
        return string.Join("-", words);
    }
}

