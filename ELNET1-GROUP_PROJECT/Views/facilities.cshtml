                 document.addEventListener('DOMContentLoaded', function () {
            // Get the Reserve button and Reservation modal
            var reserveButton = document.querySelector('#facilityModal .btn-primary');
            var reservationModal = new bootstrap.Modal(document.getElementById('reservationModal'));

            // Add click event to the Reserve button
            reserveButton.addEventListener('click', function () {
                // Close the current modal (facilityModal)
                var facilityModal = bootstrap.Modal.getInstance(document.getElementById('facilityModal'));
                facilityModal.hide();

                // Open the reservation modal
                reservationModal.show();
            });

            // Calendar Functionality
            let currentDate = new Date();
            let currentMonth = currentDate.getMonth();
            let currentYear = currentDate.getFullYear();

            const monthNames = [
                "January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
            ];

            // Function to render the calendar
            function renderCalendar(month, year) {
                const calendarBody = document.querySelector('#calendarTable tbody');
                const currentMonthYear = document.getElementById('currentMonthYear');

                // Clear existing calendar
                calendarBody.innerHTML = '';

                // Set the current month and year
                currentMonthYear.textContent = `${monthNames[month]} ${year}`;

                // Get the first day of the month
                const firstDay = new Date(year, month, 1);
                const startingDay = firstDay.getDay(); // 0 (Sunday) to 6 (Saturday)

                // Get the number of days in the month
                const daysInMonth = new Date(year, month + 1, 0).getDate();

                let date = 1;
                for (let i = 0; i < 6; i++) {
                    const row = document.createElement('tr');
                    for (let j = 0; j < 7; j++) {
                        const cell = document.createElement('td');
                        cell.style.padding = '10px';
                        cell.style.cursor = 'pointer';
                        cell.style.borderRadius = '5px';
                        if (i === 0 && j < startingDay) {
                            // Empty cells before the first day of the month
                            cell.textContent = '';
                        } else if (date > daysInMonth) {
                            // Empty cells after the last day of the month
                            cell.textContent = '';
                        } else {
                            // Fill in the dates
                            cell.textContent = date;

                            // Highlight the current date
                            if (date === currentDate.getDate() && month === currentDate.getMonth() && year === currentDate.getFullYear()) {
                                cell.style.backgroundColor = '#007bff';
                                cell.style.color = '#fff';
                            }

                            // Add hover effect
                            cell.addEventListener('mouseover', function () {
                                if (cell.textContent !== '') {
                                    cell.style.backgroundColor = '#f0f0f0';
                                }
                            });
                            cell.addEventListener('mouseout', function () {
                                if (cell.textContent !== '') {
                                    cell.style.backgroundColor = '';
                                    if (date === currentDate.getDate() && month === currentDate.getMonth() && year === currentDate.getFullYear()) {
                                        cell.style.backgroundColor = '#007bff';
                                        cell.style.color = '#fff';
                                    }
                                }
                            });

                            // Add click event
                            cell.addEventListener('click', function () {
                                // Highlight the selected date
                                const selectedDate = new Date(year, month, date);
                                alert(`Selected Date: ${selectedDate.toDateString()}`);
                            });

                            date++;
                        }
                        row.appendChild(cell);
                    }
                    calendarBody.appendChild(row);
                    if (date > daysInMonth) break;
                }
            }

            // Initial render
            renderCalendar(currentMonth, currentYear);

            // Previous Month Button
            document.getElementById('prevMonth').addEventListener('click', function () {
                currentMonth--;
                if (currentMonth < 0) {
                    currentMonth = 11;
                    currentYear--;
                }
                renderCalendar(currentMonth, currentYear);
            });

            // Next Month Button
            document.getElementById('nextMonth').addEventListener('click', function () {
                currentMonth++;
                if (currentMonth > 11) {
                    currentMonth = 0;
                    currentYear++;
                }
                renderCalendar(currentMonth, currentYear);
            });
        });
    </script>
