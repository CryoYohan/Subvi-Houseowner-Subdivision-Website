<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/output.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/css/output.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/UnauthorizedEffect.css" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-200">
    @{
        var userRole = Context.Request.Cookies["UserRole"]; 
        var homeUrl = userRole switch
        {
            "Admin" => "/Admin",
            "Homeowner" => "/Homeowner/HomeownerDashboard",
            "Staff" => "/Staff",
            _ => "/home" 
        };
    }

    <header class="bg-white shadow-md px-6 py-4">
        <nav>
            <div class="flex items-center justify-between">
                <!-- Logo Section -->
                <a href="@homeUrl" class="block">
                    <img src="~/images/subvi-logo.png" class="h-12 pl-4" alt="Subvi Logo">
                </a>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>
   

    <footer>
        <div class="container">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
