<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/css/output.css" rel="stylesheet" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/UnauthorizedEffect.css" />
    <link rel="stylesheet" href="~/css/forum.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <header class="bg-white shadow-md px-6 py-4 relative">
            <nav>
                <div class="flex items-center justify-between">
                    <!-- Logo Section -->
                    <h1 class="text-4xl">
                        <span style="color: #4f92e3;"><b>Subvi</b></span>
                        <span style="color: #60A5FA;"><b>.</b></span>
                    </h1>

                    <!-- Icons Section -->
                    <div class="flex items-center space-x-6 pr-4 text-blue-800 relative">
                        <a href="#"><i class="fas fa-bell text-xl userbutton"></i></a>

                        <!-- User Profile Dropdown -->
                        <div class="relative">
                            <button id="user-menu-btn" class="focus:outline-none">
                                <i class="fas fa-user-circle text-xl userbutton"></i>
                            </button>         
                        </div>
                        <!-- Dropdown Menu -->
                        <div id="user-dropdown" class="absolute text-right mt-2 w-1/2 bg-white shadow-lg rounded-lg overflow-hidden border flex-1 border-gray-200 hidden z-50">
                            <ul class="text-sm text-gray-800">
                                <li>
                                    <a href="#" class="flex items-center px-4 py-2 hover:bg-gray-100 transition">
                                        <i class="fas fa-cog text-gray-600 mr-2"></i><span> Settings</span>
                                    </a>
                                </li>
                                <li>
                                    <a onclick="openLogoutPopup()"
                                       class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 transition">
                                        <i class="fas fa-sign-out-alt text-red-600 text-xl"></i>
                                        <span class="text-red-600 font-semibold"> Logout</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Theme Toggle Button -->
                        <button id="theme-toggle" class="focus:outline-none transition">
                            <i id="theme-icon" class="fas fa-moon text-xl userbutton"></i>
                        </button>
                    </div>
                </div>
            </nav> 
            
            
        </header>

        <div id="loading-screen" class="d-flex justify-content-center align-items-center position-fixed top-0 start-0 w-100 h-100 bg-white" style="z-index: 1050; display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <!-- Logout Confirmation Div -->
        <div id="logoutPopup" class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-50 z-50 hidden">
            <div class="modal-content p-6 rounded-lg shadow-xl w-96 text-center animate-fade-in">
                <h2 class="text-2xl font-semibold text-gray-800">Confirm Logout</h2>
                <p class="mt-2 text-gray-600">Are you sure you want to log out?</p>

                <div class="mt-4 flex justify-center space-x-4">
                    <button onclick="logout()"
                            class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition">
                        Yes, Logout
                    </button>
                    <button onclick="closeLogoutPopup()"
                            class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 transition">
                        Cancel
                    </button>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        <div id="logoutMessage" class="fixed bottom-5 right-5 bg-green-500 text-white p-3 rounded-lg shadow-lg hidden">
            <p>Logged out successfully!</p>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/loading-animation.js"></script>
    <script src="~/js/logout.js"></script>
    <script src="~/js/theme-toggle.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
