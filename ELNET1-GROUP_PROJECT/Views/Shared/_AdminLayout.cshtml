<!-- Views/Shared/_AdminLayout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title> Admin | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css">
    <link rel="stylesheet" href="~/css/landing.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.5/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm p-3 rounded">
            <div class="container-fluid">
                <h1>
                    <span style="color: #1E3A8A;"><b>Subvi</b></span>
                    <span style="color: #60A5FA;"><b>.</b></span>
                </h1>
                <ul class="nav justify-content-center">        
                    <li class="nav-item">
                        <a href="@Url.Action("DeleteAllUsers")" class="btn btn-danger">Delete All Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Profile</a>
                    </li>
				    <li class="nav-item cursor-pointer" onclick="openLogoutPopup()">
                        <a class="nav-link" ">Logout</a>
                    </li>

                </ul>
            </div>
		</nav>
	</header>

    <main">
        @RenderBody()  <!-- This is where the content from your admin views will be injected -->
    </main>
    
    <!-- Logout Confirmation Div -->
	<div id="logoutPopup" class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-50 hidden z-50">
		<div class="modal-content p-6 rounded-lg shadow-xl w-96 text-center animate-fade-in">
			<h2 class="text-2xl font-semibold text-gray-800">Confirm Logout</h2>
			<p class="mt-2 text-gray-600">Are you sure you want to log out?</p>

			<div class="mt-4 flex justify-center space-x-4">
				<button onclick="logout()"
						class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition">
					Yes, Logout
				</button>
				<button onclick="closeLogoutPopup()"
						class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 transition">
					Cancel
				</button>
			</div>
		</div>
	</div>

	<!-- Success Message -->
	<div id="logoutMessage" class="fixed bottom-5 right-5 bg-green-500 text-white p-3 rounded-lg shadow-lg hidden">
		<p>Logged out successfully!</p>
	</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/loading-animation.js"></script>
    <script src="~/js/dashboard-admin.js" asp-append-version="true"></script>
    <script src="~/js/logout.js"></script>
</body>
</html>
