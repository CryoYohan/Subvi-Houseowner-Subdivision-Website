<!-- Views/Shared/_AdminLayout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ELNET1_GROUP_PROJECT.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm p-3 mb-5 rounded">
        <div class="container-fluid">
            <h1>
                <span style="color: #1E3A8A;"><b>Subvi</b></span>
                <span style="color: #60A5FA;"><b>.</b></span>
            </h1>
            <ul class="nav justify-content-center">        
                <li class="nav-item">
                    <a href="@Url.Action("DeleteAllUsers")" class="btn btn-danger">Delete All Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("dashboard", "Home")">Logout</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()  <!-- This is where the content from your admin views will be injected -->
        </main>
    </div>
</body>
</html>
